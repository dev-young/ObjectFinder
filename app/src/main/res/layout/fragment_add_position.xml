<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.AddPositionFragment"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/default_item_spacing"
                android:paddingBottom="?actionBarSize"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    app:cardCornerRadius="@dimen/default_item_radius"
                    app:cardUseCompatPadding="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <io.ymsoft.objectfinder.ui.custom.SquareFrameLayout
                            android:id="@+id/pointLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            >

                            <io.ymsoft.objectfinder.ui.custom.SquareImageView
                                android:id="@+id/imgView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_menu_camera"
                                android:backgroundTint="@android:color/darker_gray"
                                />

                            <LinearLayout
                                android:id="@+id/addPhotoBtnGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                >
                                <Button
                                    android:id="@+id/takePhoto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/take_photo"
                                    android:textStyle="bold"
                                    android:layout_margin="@dimen/default_item_spacing"
                                    />
                                <Button
                                    android:id="@+id/pickFromAlbum"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pick_from_album"
                                    android:textStyle="bold"
                                    android:layout_margin="@dimen/default_item_spacing"
                                    />
                            </LinearLayout>


                            <ImageView
                                android:id="@+id/pointer"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_target"
                                />


                        </io.ymsoft.objectfinder.ui.custom.SquareFrameLayout>

                        <LinearLayout
                            android:id="@+id/photoMenuLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/please_input_position"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:paddingHorizontal="@dimen/default_item_spacing"
                                />

                            <ImageView
                                android:id="@+id/removeBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp"
                                android:src="@drawable/ic_remove_24dp"/>

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/default_item_spacing">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/positionName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_position_name"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/default_item_spacing">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/positionMemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_position_memo" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/default_item_spacing"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_gravity="end"
                    android:text="@string/add"
                    />




            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>